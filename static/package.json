{
    "name": "ssm-static-boilerplate",
    "version": "3.0.1",
    "author": "Secret Stache Media <rich@secretstache.com>",
    "license": "MIT",
    "vars": {
        "prefix": "/secretstache/ssmv4",
        "project": "default"
    },
    "scripts": {
		"clean": "rimraf dist",
		"start": "cross-env npm-run-all -l clean -p start:*",
		"start:webpack": "cross-env project=$npm_package_vars_project mode=development webpack",
		"start:eleventy": "cross-env prefix= project=$npm_package_vars_project mode=development eleventy --quiet --watch --serve",
		"build": "cross-env npm-run-all clean build:*",
		"build:webpack": "cross-env mode=production webpack",
		"build:eleventy": "cross-env prefix=/static project=$npm_package_vars_project mode=production eleventy --quiet"
    },
    "devDependencies": {
        "@11ty/eleventy": "^2.0.1",
        "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
        "@babel/core": "^7.24.4",
        "@babel/preset-env": "^7.24.4",
        "autoprefixer": "^10.4.19",
        "babel-loader": "^9.1.3",
        "copy-webpack-plugin": "^12.0.2",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.1",
        "css-minimizer-webpack-plugin": "^6.0.0",
        "eslint": "^9.1.1",
        "eslint-config-prettier": "^9.0.0",
        "fs": "^0.0.1-security",
        "globals": "^15.1.0",
        "html-prettify": "^1.0.7",
        "js-yaml": "^4.1.0",
        "mini-css-extract-plugin": "^2.8.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.38",
        "postcss-loader": "^8.1.1",
        "prettier": "3.2.5",
        "prettier-plugin-css-order": "^2.0.0",
        "prettier-plugin-multiline-arrays": "^3.0.4",
        "require-glob": "^4.1.0",
        "rimraf": "^5.0.1",
        "sass": "^1.71.1",
        "sass-loader": "^14.2.1",
        "slugify": "^1.6.6",
        "style-loader": "^4.0.0",
        "stylelint": "^16.4.0",
        "stylelint-config-standard-scss": "^13.1.0",
        "terser-webpack-plugin": "^5.3.10",
        "webpack": "^5.90.3",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^5.1.4",
        "webpackbar": "^6.0.1"
    },
    "resolutions": {
        "string-width": "^4.2.3",
        "wrap-ansi": "^7.0.0"
    }
}
