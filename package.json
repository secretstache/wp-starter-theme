{
  "name": "sage",
  "private": true,
  "browserslist": [
    "extends @roots/browserslist-config"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "bud dev",
    "build": "bud build --dashboard --no-browserslist-update",
    "static-install": "yarn --cwd ./static install",
    "static-build": "yarn --cwd ./static build",
    "static-staging-build": "yarn --cwd ./static staging-build",
    "static-start": "yarn --cwd ./static start",
    "static-copy": "run-p static-copy:*",
    "static-copy:styles": "ncp ./static/src/assets/styles ./resources/styles",
    "static-copy:scripts": "ncp ./static/src/assets/scripts ./resources/scripts/client",
    "static-copy:fonts": "ncp ./static/src/assets/fonts ./resources/fonts",
    "static-copy:video": "ncp ./static/src/assets/video ./resources/video",
    "static-copy:images": "ncp ./static/src/assets/images ./resources/images",
    "clean-assets": "rimraf \"resources/scripts/app.js resources/fonts/* resources/styles/{*,!editor.scss} resources/video/* resources/images/*\""
  },
  "devDependencies": {
    "@roots/bud": "6.20.0",
    "@roots/bud-eslint": "^6.20.0",
    "@roots/bud-sass": "^6.20.0",
    "@roots/eslint-config": "^6.20.0",
    "@roots/sage": "6.20.0",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.3",
    "prettier-plugin-css-order": "^2.0.0",
    "prettier-plugin-multiline-arrays": "^3.0.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.1.0"
  },
  "dependencies": {}
}
